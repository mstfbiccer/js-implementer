{
  "name": "JS Implementer",
  "version": "3.0",
  "description": "Let's Add JS",
  "permissions": ["storage","tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/javascriptlogo.png",
    "default_popup": "popup.html"
  }, 
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": [
        "load.js"
      ]
    }
   ],
  "manifest_version": 2
}